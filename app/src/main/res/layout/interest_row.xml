<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/relativelayt_interest"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageview_interest_pic"
            android:layout_width="@dimen/interest_pic_width"
            android:layout_height="@dimen/interest_pic_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageview_subscribe"
            android:layout_toRightOf="@+id/imageview_interest_pic"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >

            <TextView
                android:id="@+id/textview_interest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:maxLines="2"
                android:textColor="@android:color/black"
                tool:text="Buzz Name"

                />

            <TextView
                android:id="@+id/subscriber_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/black"
                tool:text="subcriber count"
                />

            <TextView
                android:id="@+id/subscriber_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/black"
                tool:text="distance"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_subscribe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/subscribe"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>