<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativelayt_interest"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_interest"
                android:orientation="vertical"

                android:clickable="true"
                android:padding="5dp"
    >

    <ImageView
        android:id="@+id/imageview_interest_pic"
        android:layout_width="@dimen/chat_profile_image"
        android:layout_height="@dimen/chat_profile_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/textview_interest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:layout_toLeftOf="@+id/imageview_subscribe"
        android:layout_toRightOf="@+id/imageview_interest_pic"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/imageview_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/subscribe"/>


</RelativeLayout>